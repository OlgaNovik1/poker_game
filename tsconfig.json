{
  "compilerOptions": {
    "outDir": "./dist", //сборка сюда
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "importHelpers": false, //если пишем библиотеки - писать true
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src" //папка проекта
  ]
}